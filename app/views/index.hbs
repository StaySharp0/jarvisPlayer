<script type="text/javascript">
//main
const player = new Player('#audio');
const ui = new UI({
  time_bar  :'#bar',
  repeat    :'#repeat',
  repeat_one:'#repeat_one',
  play      :'#play',
  pause     :'#pause',
  shuffle   :'#shuffle',
  volume_on :'#volume_on',
  volume_off:'#volume_off' 
});

ui.init({
  play:   ()=>{player.play();},
  pause:  ()=>{player.pause();},
  seek:   (time)=>{player.seek(time);}
});

player.setEnvets('statechange',(state)=>{
  if(state === 'finished') ui.togglePlay();
});
player.setEnvets('durationchange',(duration)=>{ui.setDuration(duration)});
player.setEnvets('timeupdate',(time)=>{ui.updateTime(time)});


</script>
